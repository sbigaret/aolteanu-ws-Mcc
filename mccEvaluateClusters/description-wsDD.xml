<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../docs/w3-ws/specificationData/description.xsd">
       <program provider="ws-Mcc"
              name="mccEvaluateClusters"
              displayName="mccEvaluateClusters"
              version="1.0" />
       <documentation>
              <description>This web service evaluates clusters of alternatives based on the following clustering typology: non-relational, relational, ordered, {p+,p-}-exclusive relational and {p+,p-}-exclusive ordered multi-criteria clustering. It outputs 4 performance indicators.</description>
              <contact>Alexandru Olteanu (alexandru.olteanu@uni.lu)</contact>
       </documentation>
       <parameters>
              <input id="alternatives" name="alternatives" displayName="alternatives" isoptional="0">
                     
                     <documentation>
                            <description>A list of alternatives. Alternatives can be activated or deactivated via the &lt;active&gt; tag (true or false). By default (no &lt;active&gt; tag), alternatives are considered as active. </description>
                     </documentation>
                     <xmcda tag="alternatives">
                     </xmcda>
              </input>
              <input id="preferenceRelation" name="preferenceRelation" displayName="preferenceRelation">
                     <documentation>
                            <description>The preference relation between alternatives.</description>
                     </documentation>
                     <xmcda tag="alternativesComparisons"/>
              </input>     
	      <input id="clusters" name="clusters" displayName="clusters">
                     <documentation>
                            <description>The clusters of alternatives.</description>
                     </documentation>
		     <xmcda tag="categories"/>
                     <xmcda tag="alternativesAffectations"/>
              </input>             
	      <input id="clustersRelations" name="clustersRelations" displayName="clustersRelations">
                     <documentation>
                            <description>The relation between clusters.</description>
                     </documentation>
                     <xmcda tag="categoriesComparisons"/>
              </input>         
              
              <output id="messages" name="messages" displayName="messages">
                     <documentation>
                            <description>A list of messages generated by the algorithm, including the 4 performance indicators.</description>
                     </documentation>
                     <xmcda tag="methodMessages"/>
              </output>      

	      <output id="clustersRelationsDetailed" name="clustersRelationsDetailed" displayName="clustersRelationsDetailed">
                     <documentation>
                            <description>The detailed relation between clusters.</description>
                     </documentation>
                     <xmcda tag="categoriesComparisons"/>
              </output>        
       </parameters>
</program_description>
